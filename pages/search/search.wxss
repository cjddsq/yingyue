.searchContainer {
  padding: 0 20rpx;
}
.header {
  display: flex;
  height: 60rpx;
  line-height: 60rpx;
  padding: 10rpx 0;
}
.searchInput {
  position: relative;
  flex: 1;
  border-radius: 30rpx;
  background: rgba(237, 237, 237, 0.3);
}
.cancel {
  width: 100rpx;
  text-align: center;
}
.searchIcon {
  position: absolute;
  left: 15rpx;
}
.searchInput input {
  height: 60rpx;
  margin-left: 60rpx;
}
.placeholder {
  color: #d43c33;
  font-size: 28rpx;
}

/* 热搜榜 */
.hotContainer .title {
  font-size: 30rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1rpx solid #eee;
}
.hotList {
  display: flex;
  flex-wrap: wrap;
}
.hotList .hotItem {
  width: 50%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 26rpx;
}
.hotItem .order {
  margin: 0 10rpx;
}
.hotItem .iconImg {
  width: 35rpx;
  height: 20rpx;
  margin-left: 10rpx;
}

/* 热搜榜 */
.searchContent {
  color: #d43c33;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 24rpx;
  border-bottom: 1rpx solid #d43c33;
}
.searchItem {
  height:80rpx;
  line-height: 80rpx;
  display: flex;
}
.searchItem .content {
  flex: 1;
  margin-left: 20rpx;
  border-bottom: 1rpx solid #eee;
  font-size: 26rpx;
}

/* 搜索历史 */
.history {
  position: relative;
  display: flex;
  flex-wrap: wrap;
  
}
.history .title {

  margin: 10rpx 20rpx;
  font-size: 28rpx;
  height: 50rpx;
  line-height: 50rpx;
}
.history .historyItem {
  margin: 10rpx 20rpx;
  padding: 0 30rpx;
  font-size: 26rpx;
  background: #ededed;
  border-radius: 20rpx;
  height: 50rpx;
  line-height: 50rpx;
}
.history .delete {
  position: absolute;
  bottom: 10rpx;
  right: 15rpx;
  font-size: 36rpx;
}